#!ipxe
###
### netboot.xyz-custom menu example
###

:custom
clear custom_choice
menu HeyImKyu's Menu
item --gap Utils
item dban ${space} DBAN
item option_two ${space} Loading an ISO
choose custom_choice || goto custom_exit
echo ${cls}
goto ${custom_choice}
goto custom_exit

:dban
kernel https://boot.netboot.xyz/memdisk raw iso
initrd http://sourceforge.net/projects/dban/files/dban/dban-2.3.0/dban-2.3.0_i586.iso/download
boot || goto custom_exit

:option_two
kernel https://boot.netboot.xyz/memdisk raw iso
initrd http://path.to/iso
boot || goto custom_exit

:custom_exit
chain utils.ipxe
exit
